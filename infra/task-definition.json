
{
  "family": "saas-task",
  "networkMode": "awsvpc",
  "cpu": "512",
  "memory": "1024",
  "requiresCompatibilities": ["FARGATE"],
  "taskRoleArn": "arn:aws:iam::957597318409:role/saasAppTaskRole",
  "executionRoleArn": "arn:aws:iam::957597318409:role/ecsTaskExecutionRole",
  "containerDefinitions": [
    {
      "name": "app",
      "image": "957597318409.dkr.ecr.us-east-1.amazonaws.com/saas-pm:latest",
      "essential": true,
      "portMappings": [{ "containerPort": 3000, "protocol": "tcp" }],

      "environment": [
        { "name": "NODE_ENV", "value": "production" },
        { "name": "PORT", "value": "3000" },

        {
          "name": "GOOGLE_REDIRECT_URI",
          "value": "https://api.saas.haim.com/api/auth/google/callback"
        },
        {
          "name": "FRONTEND_SUCCESS_REDIRECT",
          "value": "https://saas.haim.com/"
        },
        {
          "name": "FRONTEND_FAILURE_REDIRECT",
          "value": "https://saas.haim.com/login?error=google"
        }
      ],

      "secrets": [
        {
          "name": "MONGO_URI",
          "valueFrom": "arn:aws:secretsmanager:us-east-1:957597318409:secret:saas/secrets-KOIs3B"
        },
        {
          "name": "JWT_SECRET",
          "valueFrom": "arn:aws:secretsmanager:us-east-1:957597318409:secret:saas/secrets-KOIs3B"
        },
        {
          "name": "GOOGLE_CLIENT_SECRET",
          "valueFrom": "arn:aws:secretsmanager:us-east-1:957597318409:secret:saas/secrets-KOIs3B"
        },
        {
          "name": "GOOGLE_CLIENT_ID",
          "valueFrom": "arn:aws:secretsmanager:us-east-1:957597318409:secret:saas/secrets-KOIs3B"
        }
      ],

      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/saas-task",
          "awslogs-region": "us-east-1",
          "awslogs-stream-prefix": "app"
        }
      }
    }
  ]
}
