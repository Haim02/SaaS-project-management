{
  "family": "saas-task",
  "networkMode": "awsvpc",
  "cpu": "512",
  "memory": "1024",
  "requiresCompatibilities": ["FARGATE"],
  "executionRoleArn": "arn:aws:iam::957597318409:role/ecsTaskExecutionRole",
  "taskRoleArn": "arn:aws:iam::957597318409:role/saasAppTaskRole",
  "containerDefinitions": [
    {
      "name": "app",
      "image": "957597318409.dkr.ecr.us-east-1.amazonaws.com/saas-pm:latest",
      "essential": true,
      "portMappings": [{ "containerPort": 3000, "protocol": "tcp" }],
      "environment": [
        { "name": "NODE_ENV", "value": "production" },
        { "name": "PORT", "value": "3000" },

        {
          "name": "GOOGLE_REDIRECT_URI",
          "value": "http://localhost:3000/api/auth/google/callback"
        },
        {
          "name": "FRONTEND_SUCCESS_REDIRECT",
          "value": "https://localhost:3000/"
        },
        {
          "name": "FRONTEND_FAILURE_REDIRECT",
          "value": "https://localhost:3000/login?error=google"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/saas",
          "awslogs-region": "us-east-1",
          "awslogs-stream-prefix": "app"
        }
      }
    }
  ]
}
